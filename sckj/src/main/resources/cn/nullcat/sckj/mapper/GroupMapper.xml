<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.nullcat.sckj.mapper.GroupMapper">
    <select id="getAll" resultType="cn.nullcat.sckj.pojo.Group">
        SELECT g.*
        FROM groups g
        <where>
            <if test="name != null"> AND g.group_name LIKE CONCAT('%', #{name}, '%') </if>
            <if test="begin != null and end != null"> AND g.creation_date BETWEEN #{begin} AND #{end} </if>
        </where>
        ORDER BY g.creation_date DESC
    </select>

</mapper>